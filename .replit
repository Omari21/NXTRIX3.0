run = "python main.py"
entrypoint = "main.py"

[nix]
channel = "stable-23_11"

[[ports]]
localPort = 8080
externalPort = 80

[deployment]
run = ["python", "main.py"]
deploymentTarget = "cloudrun"
publicDir = "/"

[env]
PYTHONPATH = "/home/runner/NXTRIX-CRM"
STREAMLIT_SERVER_PORT = "8080"
STREAMLIT_SERVER_ADDRESS = "0.0.0.0"

[unitTest]
language = "python3"

[packager]
language = "python3"

[packager.features]
enabledForHosting = false
packageSearch = true
guessImports = true

[languages]
[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"